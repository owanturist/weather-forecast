{
  "name": "weather-forecast",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npx serve -s ./build -p 3000",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "compile": "tsc --project ./tsconfig.json",
    "lint": "npm run compile & eslint . --config=.eslintrc.prod.json --ext=js,ts,tsx",
    "prettify": "prettier . --write"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "npm run compile & lint-staged",
      "pre-push": "npm run test -- --watchAll=false"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --config=.eslintrc.prod.json --fix"
    ]
  },
  "dependencies": {
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react-scripts": "^3.4.1",
    "serve": "^11.3.2",
    "typescript": "^3.9.7"
  }
}
